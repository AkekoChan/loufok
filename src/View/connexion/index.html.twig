{% extends 'layout.html.twig' %}
{% block title %}Connexion -
	{{ parent() }}
{% endblock %}
{% block content %}
	<body class="">
		<link href="assets/styles/main.css" rel="stylesheet" type="text/css"/>
		<section class="auth">
			<div class="auth__top">
				<h1 class="auth__title">Loufok</h1>
				<p class="paragraph">Le cadavre exquis dans toute	sa splendeur.</p>
			</div>
			<div class="auth__bottom">
				<h3 class="title__smaller">
					Se connecter Ã  son profil
				</h3>
				<form class="form" action="/connexion" method="POST">
					<input class="form__input" placeholder="Adresse Mail" type="email" id="email" name="email" required>
					<input class="form__input" placeholder="Mot de passe" type="password" id="mdp" name="mdp" required>
